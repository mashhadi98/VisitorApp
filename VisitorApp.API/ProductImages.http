### Variables
@baseUrl = https://localhost:7101
@productId = {{createProduct.response.body.id}}

### 1. Create Product with Image
POST {{baseUrl}}/api/Products
Content-Type: multipart/form-data; boundary=WebAppBoundary

--WebAppBoundary
Content-Disposition: form-data; name="Title"

محصول نمونه با تصویر
--WebAppBoundary
Content-Disposition: form-data; name="Description"

این محصول دارای تصویر است
--WebAppBoundary
Content-Disposition: form-data; name="IsActive"

true
--WebAppBoundary
Content-Disposition: form-data; name="CategoryId"

{{$guid}}
--WebAppBoundary
Content-Disposition: form-data; name="ImageFile"; filename="product-image.jpg"
Content-Type: image/jpeg

< ./test-files/sample-product.jpg
--WebAppBoundary
Content-Disposition: form-data; name="CreateThumbnail"

true
--WebAppBoundary
Content-Disposition: form-data; name="ThumbnailSize"

200
--WebAppBoundary
Content-Disposition: form-data; name="ResizeImage"

true
--WebAppBoundary
Content-Disposition: form-data; name="MaxImageWidth"

800
--WebAppBoundary
Content-Disposition: form-data; name="MaxImageHeight"

600
--WebAppBoundary
Content-Disposition: form-data; name="ImageQuality"

90
--WebAppBoundary--

